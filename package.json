{
  "name": "api.oluwasetemi.dev",
  "type": "module",
  "version": "0.1.4",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "author": {
    "name": "Oluwasetemi Ojo",
    "email": "me@oluwasetemi.dev",
    "url": "https://oluwasetemi.dev"
  },
  "license": "MIT",
  "homepage": "https://api.oluwasetemi.dev/reference",
  "repository": {
    "type": "git",
    "url": "https://github.com/oluwasetemi/api.oluwasetemi.dev"
  },
  "engines": {
    "node": ">=22.15.32"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "test:watch": "cross-env NODE_ENV=test vitest --watch",
    "test:coverage": "cross-env NODE_ENV=test vitest --coverage --run",
    "build": "tsc && tsc-alias",
    "seed": "tsx src/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "prepare": "simple-git-hooks",
    "api-docs": "pnpm dlx open-cli http://localhost:4444/reference",
    "better-auth-docs": "pnpm dlx open-cli http://localhost:4444/api/auth/docs"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@graphql-tools/schema": "^10.0.25",
    "@hono/node-server": "^1.18.2",
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.13",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.5",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.6.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.44.4",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.5.1",
    "graphql": "^16.11.0",
    "hono": "^4.9.1",
    "hono-pino": "^0.8.0",
    "hono-rate-limiter": "^0.4.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^6.0.1",
    "stoker": "2.0.1",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.17.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md}": [
      "eslint --fix"
    ],
    "src/**/*.{ts,tsx}": [
      "bash -c 'pnpm typecheck'"
    ]
  }
}
