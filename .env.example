NODE_ENV=development
PORT=4444
LOG_LEVEL=debug
DATABASE_AUTH_TOKEN=
DATABASE_URL=file:dev.db

# Analytics settings
ENABLE_ANALYTICS=false
ANALYTICS_RETENTION_DAYS=30

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
# Security: Control whether to trust proxy headers for IP detection
RATE_LIMIT_TRUST_PROXY=false
# Comma-separated list of trusted proxy IPs (when TRUST_PROXY is true)
RATE_LIMIT_TRUSTED_PROXIES=

# JWT Authentication (Legacy)
JWT_SECRET=your-super-secret-jwt-key-here-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-must-be-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:4444
BETTER_AUTH_SECRET=your-better-auth-secret-key-32-chars-min

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
